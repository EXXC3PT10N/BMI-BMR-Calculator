<Page
    x:Class="BMICalculator.page_BMI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BMICalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="0,0,20,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock x:ConnectionId='1' x:Name="subtitle" HorizontalAlignment="Left" Margin="135,10,0,0" Text="BMI" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" RenderTransformOrigin="0.556,-0.458" Height="48" Width="70" FontFamily="Segoe UI"/>
        <TextBox x:ConnectionId='2' x:Name="height" HorizontalAlignment="Left" Margin="170,92,0,0" Text="" VerticalAlignment="Top" FontSize="24" PlaceholderText="Wzrost (cm)" FontFamily="Segoe UI" Width="160" Height="50" InputScope="Digits"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  FontSize="24" RenderTransformOrigin="-0.585,0.25" Width="160" FontFamily="Segoe UI" Height="50"><Run Text="Wzrost"/><Run Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,142,0,0" Text="Waga:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Width="160" Height="50" FontFamily="Segoe UI" />
        <TextBox x:ConnectionId='3' x:Name="weight" HorizontalAlignment="Left" Margin="170,142,0,0" Text="" VerticalAlignment="Top" PlaceholderText="Waga (kg)" Height="50" Width="160" FontSize="24" FontFamily="Segoe UI"/>
        <Button x:ConnectionId='4' Content="Oblicz" HorizontalAlignment="Left" Margin="170,192,0,0" VerticalAlignment="Top" FontSize="24" Width="160" Height="50"                     />
        <TextBox x:ConnectionId='5' x:Name="result" HorizontalAlignment="Left" Margin="170,242,0,0" Text="" VerticalAlignment="Top" PlaceholderText="Wynik" IsReadOnly="True" FontSize="24" Width="160" Height="50"/>
        <TextBox x:ConnectionId='6' x:Name="result_description" HorizontalAlignment="Left" Margin="10,297,0,0" Text="TextBox" VerticalAlignment="Top" FontSize="24" Height="139" Width="320" IsReadOnly="True" SelectionHighlightColor="#009FBFAB" Visibility="Collapsed" />
        <Frame x:ConnectionId='7' x:Name="info_frame" Content="Frame" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Height="1070" Width="361"/>
        <TextBlock x:ConnectionId='8' x:Name="bmiBlock" HorizontalAlignment="Left" Margin="10,441,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="116" Width="318" FontSize="20" Visibility="Collapsed"/>


    </Grid>
</Page>

